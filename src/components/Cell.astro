---
import type { LessonType, Teacher } from "../data/lessonTypes";

export interface Props {
    lessonType?: LessonType;
    teacher?: Teacher;
    paused?: boolean;
}
const { lessonType, teacher, paused } = Astro.props;
---

<div
    class={`cell lesson ${paused ? 'paused' : ''}`}
    style={`background-color:${paused ? "#e8e8e8" : (lessonType?.color ?? "#fff")};`}
>
    <div class="lesson-name">{lessonType?.name ?? ""}</div>
    <div class="teacher-name">{paused ? '' : (teacher?.name ?? "")}</div>
</div>

<style>
    .lesson {
        position: relative;
    }

    .lesson-name {
        text-align: center;
    }

    .teacher-name {
        font-size: 0.6em;
        color: #888;
        position: absolute;
        left: 6px;
        bottom: 4px;
        text-align: left;
    }

    .paused {
        text-decoration: line-through;
        color: #888;
    }
</style>
